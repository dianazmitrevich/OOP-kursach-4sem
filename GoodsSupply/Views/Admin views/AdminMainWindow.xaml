<Window x:Class="GoodsSupply.Views.Admin_views.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoodsSupply.Views.Admin_views"
        xmlns:vm="clr-namespace:GoodsSupply.ViewModels.Admin_viewmodels"
        mc:Ignorable="d"
        Height="580" Width="965"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Icon="/Assets/whiteRectangle.png"
        FontFamily="pack://application:,,,/Assets/Fonts/#Noto Sans">
    <!--:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"-->
    <Window.DataContext>
        <vm:AdminMainWindowViewModel></vm:AdminMainWindowViewModel>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Assistants/Resources/StyleTriggers.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="56"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="112"></ColumnDefinition>
            <ColumnDefinition Width="141"></ColumnDefinition>
            <ColumnDefinition Width="267"></ColumnDefinition>
            <ColumnDefinition Width="220"></ColumnDefinition>
            <ColumnDefinition Width="210"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Rectangle Width="960" Height="59" Grid.Row="0" Grid.ColumnSpan="5" Fill="#EAEAEA"></Rectangle>
        <Rectangle Grid.Row="1" Grid.Column="4" Grid.RowSpan="3" Width="210" Fill="#AEAEAE"/>
        <Image Source="/Assets/ikeaLogo.jpg" Width="80" Grid.Column="4" HorizontalAlignment="Right" Margin="12 0"></Image>
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" Width="32" Margin="0 20 0 0">
            <Button Style="{DynamicResource DefaultButtonStyle}" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Assets/catalogAButton.jpg"></Image>
            </Button>
            <Button Style="{DynamicResource DefaultButtonStyle}" Background="Transparent" BorderBrush="Transparent" Margin="0 20">
                <Image Source="/Assets/couponsButton.jpg"></Image>
            </Button>
            <Button Style="{DynamicResource DefaultButtonStyle}" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Assets/reviewsButton.jpg"></Image>
            </Button>
            <Button Style="{DynamicResource DefaultButtonStyle}" Background="Transparent" BorderBrush="Transparent" Margin="0 20">
                <Image Source="/Assets/logOutButton.jpg"></Image>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Margin="0 17 30 0">
            <Label Content="КАТЕГОРИИ" FontWeight="SemiBold" FontSize="16" Margin="-4 0 0 10"></Label>
            <ListView ItemsSource="{Binding CategoriesList}" IsSynchronizedWithCurrentItem="True" Margin="-5 0 0 0" ItemContainerStyle="{DynamicResource ListViewItemStyle}" SelectedItem="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged}" BorderBrush="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" FontSize="10" Margin="-5 0 0 10" Padding="5 5 5 0" TextWrapping="Wrap" Width="111"></TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Margin="0 17 30 0">
            <Label Content="ТОВАРЫ" FontWeight="SemiBold" FontSize="16" Margin="-4 0 0 10"></Label>
            <!--<StackPanel Grid.Row="2" Margin="0 100" Visibility="{Binding NoCategoryselectedFlag}">
                <Image Source="Assets/notSelected.png" Width="85"></Image>
                <TextBlock Text="Здесь пока пусто! Для начала выберите категорию" Margin="10" FontStyle="Italic" FontSize="10" Width="122" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
            </StackPanel>-->
            <ListView ItemsSource="{Binding ProductsList}" IsSynchronizedWithCurrentItem="True" ItemContainerStyle="{DynamicResource ListViewItemProductStyle}" SelectedItem="{Binding SelectedProductItem, UpdateSourceTrigger=PropertyChanged}"  Width="247" BorderBrush="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E6E6E6" Width="235" BorderThickness="1" Margin="-5 0 0 5">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Assets/test.PNG" Width="43" Margin="10"></Image>
                                    <StackPanel Margin="0 10">
                                        <Label Content="{Binding Name}" FontSize="12" Padding="0" Margin="0 0 0 2"></Label>
                                        <TextBlock Text="{Binding Description}" FontSize="10" MaxWidth="110" TextWrapping="Wrap"></TextBlock>
                                    </StackPanel>
                                </StackPanel>
                                <TextBlock Text="{Binding Price}" Padding="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5 -35 20 10" FontWeight="SemiBold"></TextBlock>
                                <TextBlock Text="₽" Padding="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 -35 10 10" FontWeight="SemiBold"></TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <ScrollViewer Grid.Row="1" Grid.RowSpan="2" Grid.Column="3" VerticalScrollBarVisibility="Hidden">
            <StackPanel Margin="0 17 20 0" Visibility="{Binding}">
                <Label Content="РЕДАКТИРОВАНИЕ" FontWeight="SemiBold" FontSize="16" Margin="-1 0 0 10"></Label>
                    <TextBlock Text="Здесь можно редактировать категорию/товар. Для начала выберите что-нибудь" Margin="5" FontStyle="Italic" FontSize="10" TextWrapping="Wrap" TextAlignment="Left"></TextBlock>
                    <TextBlock Text="Категория:" Margin="5" FontStyle="Italic" FontSize="10" TextWrapping="Wrap" TextAlignment="Left"></TextBlock>
                    <ContentControl Content="{Binding CategoriesList}" Margin="0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Width="210">
                        <ContentControl.ContentTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBox FontSize="10" Width="210" Text="{Binding Name}" Padding="10 7" Height="27" HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#EFEFEF"></TextBox>
                                    <Label Content="Название" FontSize="8" Margin="0 -5 0 0"></Label>
                                </StackPanel>
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                </ContentControl>
                <Button Style="{DynamicResource DefaultButtonStyle}" Height="30" Margin="25 10 0 10" Content="Обновить категорию" FontSize="10" BorderBrush="#0058A3" Background="Transparent" BorderThickness="1"></Button>
                <TextBlock Text="Товар:" Margin="5 20 5 5" FontStyle="Italic" FontSize="10" TextWrapping="Wrap" TextAlignment="Left"></TextBlock>
                <ContentControl Content="{Binding ProductsList}" Margin="0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Width="210">
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0 0 0 20">
                                <StackPanel>
                                    <TextBox FontSize="10" Width="210" Text="{Binding Name}" Padding="10 7" Height="27" HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#EFEFEF"></TextBox>
                                    <Label Content="Название" FontSize="8" Margin="0 -5 0 0"></Label>
                                </StackPanel>
                                <StackPanel>
                                    <TextBox FontSize="10" Width="210" Text="{Binding Description}" TextWrapping="Wrap" Padding="10 7" Height="60" HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#EFEFEF"></TextBox>
                                    <Label Content="Описание для анонса" FontSize="8" Margin="0 -5 0 0"></Label>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0 10 0 10">
                                    <Label Content="Изображение" FontSize="8"></Label>
                                    <Button Margin="85 -1 0 0" HorizontalAlignment="Left" FontSize="10" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                                        <TextBlock Text="Выбрать" TextDecorations="Underline"></TextBlock>
                                    </Button>
                                </StackPanel>
                                <StackPanel>
                                    <TextBox FontSize="10" Width="210" Text="{Binding Price}" Padding="10 7" Height="27" HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#EFEFEF"></TextBox>
                                    <Label Content="Цена" FontSize="8" Margin="0 -5 0 0"></Label>
                                </StackPanel>
                                <StackPanel>
                                    <TextBox FontSize="10" Width="210" Text="{Binding Quantity}" Padding="10 7" Height="27" HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#EFEFEF"></TextBox>
                                    <Label Content="Доступное количество" FontSize="8" Margin="0 -5 0 0"></Label>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
                <ContentControl Content="{Binding ProductsDetail}" Margin="0" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Width="210">
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0 0 0 5">
                                <StackPanel>
                                    <TextBox FontSize="10" Width="210" Text="{Binding ProductCode}" Padding="10 7" Height="27" HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#EFEFEF"></TextBox>
                                    <Label Content="Код товара" FontSize="8" Margin="0 -5 0 0"></Label>
                                </StackPanel>
                                <StackPanel>
                                    <TextBox FontSize="10" Width="210" Text="{Binding Material}" TextWrapping="Wrap" Padding="10 7" Height="80" HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#EFEFEF"></TextBox>
                                    <Label Content="Материал" FontSize="8" Margin="0 -5 0 0"></Label>
                                </StackPanel>
                                <StackPanel>
                                    <TextBox FontSize="10" Width="210" Text="{Binding Package}" TextWrapping="Wrap" Padding="10 7" Height="80" HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#EFEFEF"></TextBox>
                                    <Label Content="Упаковка" FontSize="8" Margin="0 -5 0 0"></Label>
                                </StackPanel>
                                <StackPanel>
                                    <TextBox FontSize="10" Width="210" Text="{Binding Size}" TextWrapping="Wrap" Padding="10 7" Height="40" HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#EFEFEF"></TextBox>
                                    <Label Content="Размер" FontSize="8" Margin="0 -5 0 0"></Label>
                                </StackPanel>
                                <StackPanel>
                                    <TextBox FontSize="10" Width="210" Text="{Binding BigDescription}" TextWrapping="Wrap" Padding="10 7" Height="80" HorizontalAlignment="Left" BorderBrush="Transparent" BorderThickness="0" Background="#EFEFEF"></TextBox>
                                    <Label Content="Детальное описание" FontSize="8" Margin="0 -5 0 0"></Label>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
                <Button Style="{DynamicResource DefaultButtonStyle}" Height="30" Margin="25 10 0 30" Content="Обновить товар" FontSize="10" BorderBrush="#0058A3" Background="Transparent" BorderThickness="1"></Button>
            </StackPanel>
        </ScrollViewer>
        <!--<StackPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="4">
            <StackPanel MinHeight="100" Background="#fff" Margin="15 15 15 0">
                <StackPanel Margin="5 5 5 20">
                    <Label Content="ЗАКАЗЫ" FontWeight="SemiBold" FontSize="16"></Label>
                    <StackPanel Grid.Row="2" Margin="0 20" Visibility="{Binding IsCartEmpty}">
                        <Image Source="Assets/questionIcon.png" Width="35"></Image>
                        <TextBlock Text="Здесь пока пусто! Добавьте какой-нибудь товар к себе в корзину" Margin="10" FontStyle="Italic" FontSize="10" Width="122" TextWrapping="Wrap" TextAlignment="Center"></TextBlock>
                    </StackPanel>
