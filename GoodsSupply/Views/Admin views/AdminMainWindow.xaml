                    <Label Content="{Binding CartPrice}" Margin="15 -30" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Right"></Label>
                    <Label Content="₽" Margin="0 -30" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Right"></Label>
