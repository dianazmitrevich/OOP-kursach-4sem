<UserControl x:Class="GoodsSupply.Views.UserControls.SignUpContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoodsSupply.Views.UserControls"
             xmlns:vm="clr-namespace:GoodsSupply.ViewModels"
             xmlns:ff="clr-namespace:GoodsSupply.Assistants"
             d:DataContext="{d:DesignInstance Type=vm:AuthorizationViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="450"
             Background="#fff">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="25 10 25 0">
            <TextBox Height="14" Text="{Binding Name}" BorderBrush="LightGray" Background="Transparent" BorderThickness="0 0 0 1"></TextBox>
            <Label Content="Фио" FontSize="10" Margin="0 -2"></Label>
            <Label Content="Имя не должно содержать цифры" Foreground="#BE1717" Visibility="{Binding FailedNameFlag}" FontSize="10" Margin="0 -20 2 0" HorizontalAlignment="Right"></Label>
            <Rectangle Width="3" Visibility="{Binding FailedNameFlag}" Height="3" Fill="#BE1717" RadiusX="100" RadiusY="100" HorizontalAlignment="Right" Margin="0 -19 0 0"></Rectangle>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="25 10 25 0">
            <TextBox Height="14" Text="{Binding Email}" BorderBrush="LightGray" Background="Transparent" BorderThickness="0 0 0 1"></TextBox>
            <Label Content="E-mail" FontSize="10" Margin="0 -2"></Label>
            <ContentControl Content="{Binding FailedEmailLabel}" Foreground="#BE1717" Visibility="{Binding FailedEmailFlag}" FontSize="10" Margin="0 -17 7 0" HorizontalAlignment="Right"></ContentControl>
            <Rectangle Width="3" Visibility="{Binding FailedEmailFlag}" Height="3" Fill="#BE1717" RadiusX="100" RadiusY="100" HorizontalAlignment="Right" Margin="0 -19 0 0"></Rectangle>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="25 10 25 0">
            <TextBox Height="14" Text="{Binding Login}" BorderBrush="LightGray" Background="Transparent" BorderThickness="0 0 0 1"></TextBox>
            <Label Content="Придумайте логин" FontSize="10" Margin="0 -2"></Label>
            <ContentControl Content="{Binding FailedLoginLabel}" Foreground="#BE1717" Visibility="{Binding FailedLoginFlag}" FontSize="10" Margin="0 -17 8 0" HorizontalAlignment="Right"></ContentControl>
            <Rectangle Width="3" Visibility="{Binding FailedLoginFlag}" Height="3" Fill="#BE1717" RadiusX="100" RadiusY="100" HorizontalAlignment="Right" Margin="0 -19 0 0"></Rectangle>
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="25 10 25 0">
            <PasswordBox Height="14" ff:PasswordBoxAssistant.BindPassword="true" ff:PasswordBoxAssistant.BoundPassword="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderBrush="LightGray" Background="Transparent" BorderThickness="0 0 0 1"></PasswordBox>
            <Label Content="Придумайте пароль" FontSize="10" Margin="0 -2"></Label>
            <Label Content="Неверный формат пароля" Foreground="#BE1717" Visibility="{Binding FailedPasswordFlag}" FontSize="10" Margin="0 -20 2 0" HorizontalAlignment="Right"></Label>
            <Rectangle Width="3" Visibility="{Binding FailedPasswordFlag}" Height="3" Fill="#BE1717" RadiusX="100" RadiusY="100" HorizontalAlignment="Right" Margin="0 -19 0 0"></Rectangle>
        </StackPanel>
        <StackPanel Grid.Row="4" Margin="25 10 25 0">
            <PasswordBox Height="14" ff:PasswordBoxAssistant.BindPassword="true" ff:PasswordBoxAssistant.BoundPassword="{Binding Path=PasswordCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderBrush="LightGray" Background="Transparent" BorderThickness="0 0 0 1"></PasswordBox>
            <Label Content="Повторите пароль" FontSize="10" Margin="0 -2"></Label>
            <Label Content="Пароли не совпадают" Foreground="#BE1717" Visibility="{Binding FailedPasswordCheckFlag}" FontSize="10" Margin="0 -20 2 0" HorizontalAlignment="Right"></Label>
            <Rectangle Width="3" Visibility="{Binding FailedPasswordCheckFlag}" Height="3" Fill="#BE1717" RadiusX="100" RadiusY="100" HorizontalAlignment="Right" Margin="0 -19 0 0"></Rectangle>
        </StackPanel>
        <Label Grid.Row="5" Margin="25 10">
            <TextBlock Text="Есть аккаунт?" FontSize="10"></TextBlock>
        </Label>
        <Button Grid.Row="5" Command="{Binding LogInWindowCommand}" Background="Transparent"  Width="42" Height="14" Margin="-200 0 0 0" BorderThickness="0">
            <TextBlock FontSize="10" Text="Войдите" TextDecorations="Underline"></TextBlock>
        </Button>
        <Button Grid.Row="6" Command="{Binding SignupCommand}" Height="30" Margin="25 10" Content="Зарегистрироваться" FontSize="10" BorderBrush="#0058A3" Background="Transparent" BorderThickness="1"></Button>
    </Grid>
</UserControl>
